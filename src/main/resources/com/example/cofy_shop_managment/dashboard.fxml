<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.PieChart?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cofy_shop_managment.DashboardController"
            prefWidth="800" prefHeight="600">

    <!-- Title -->
    <Label text="Dashboard"
           layoutX="350" layoutY="20"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Sample Pie Chart -->
    <PieChart fx:id="salesChart"
              layoutX="100" layoutY="80"
              prefWidth="600" prefHeight="400" />

    <!-- Logout Button -->
    <Button text="Logout"
            fx:id="logoutBtn"
            layoutX="700" layoutY="20"
            onAction="#handleLogout"/>
</AnchorPane>
